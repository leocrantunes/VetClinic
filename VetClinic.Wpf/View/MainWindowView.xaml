<Window x:Class="VetClinic.Wpf.View.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetClinic.Wpf.View"
        mc:Ignorable="d"
        Title="VetClinic" Height="450" Width="800">
    <DockPanel>
        <Menu x:Name="menuMainWindow" DockPanel.Dock="Top">
            <MenuItem x:Name="menuItemFile" Header="_File">
                <MenuItem x:Name="menuItemLoad" Header="_Load" Click="MenuItemLoad_Click" />
                <MenuItem x:Name="menuItemSave" Header="_Save" Click="MenuItemSave_Click" />
                <Separator />
                <MenuItem x:Name="menuItemClear" Header="_Clear" Click="MenuItemClear_Click" />
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem x:Name="menuItemRegisterPatient" Header="_Register..." Click="ButtonAddPatient_Click" />
            </MenuItem>
        </Menu>
        <Grid x:Name="gridMainBody">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid x:Name="gridControlBar">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
            </Grid>
            <DataGrid x:Name="dataGridSchedule" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" ItemsSource="{Binding VetClinic.Patients}" Margin="178,0,0.333,0.333"/>
            <ListBox HorizontalAlignment="Left" Height="302" Margin="30,0,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100"/>
        </Grid>
    </DockPanel>
</Window>
